{% extends 'layout.twig' %}

{% block title %} Lista usuarios {% endblock %}
{% block main_container %}
    <div id="user-list" class="table-responsive">
        <h2 > Lista de usuarios </h2>

        <table class="table table-hover">
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td> {% if (user.email in emailsAmistades or user.email in emailsPeticiones) == false %}
                        <a class="page-link" href="/peticiones/enviar/{{ user.email }}">
                            Enviar solicitud
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}