{% extends "layout.twig" %}
{% block title %} Identificar usuario {% endblock %}

{% block main_container %}
    <h2>Lista de amistades</h2>
        <div  class="table-responsive">
            <table class="table table-hover" id="tableAmistades">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody>
    {% for amistad in amistades %}
                <tr>
                    <td>
                        <a class="page-link" href="/publications/list/{{ amistad.email }}">
                            {{ amistad.name }}
                        </a>
                    </td>
                    <td>{{ amistad.surname }}</td>
                    <td>{{ amistad.email }}</td>
                </tr>
    {% endfor %}
                </tbody>
            </table>
        </div>

{% endblock %}