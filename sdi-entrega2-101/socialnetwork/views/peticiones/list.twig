{% extends "layout.twig" %}
{% block title %} Identificar usuario {% endblock %}

{% block main_container %}
    <h2>Lista de peticiones</h2>
        <div  class="table-responsive">
            <table class="table table-hover" id="tableAmistades">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th>Agregar</th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                    <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody>
    {% for peticion in peticiones %}
                <tr>
                    <td>{{ peticion.name}}</td>
                    <td>{{ peticion.surname }}</td>
                    <td>{{ peticion.email }}</td>
                    <td>
                        <a class="page-link" href="/peticiones/aceptar/{{ peticion.email }}">
                            Aceptar
                        </a>
                    </td>
                </tr>
    {% endfor %}
                </tbody>
            </table>
        </div>
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a id="page{{ page }}" class="page-link" href="\users\?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}